{
    "compilerOptions": {
        "experimentalDecorators": true,
        "outDir": "./build",
        "rootDir": "./src",
        // this aligns with Vue's browser support
        "target": "es2019",
        // this enables stricter inference for data properties on `this`
        "strict": true,
        // if using webpack 2+ or rollup, to leverage tree shaking:
        "module": "es2015",
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        ".npm"
    ]
}